{
    "manifest_version": 3,
    "name": "OCR Translation",
    "version": "0.0.1",
    "description": "capture box image or video from web and translate it",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}