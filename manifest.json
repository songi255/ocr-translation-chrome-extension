{
    "manifest_version": 3,
    "name": "OCR Translation",
    "version": "0.0.1",
    "description": "capture box image or video from web and translate it",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/*",
                "images/*"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ],
            "use_dynamic_url": true
        }
    ]
}